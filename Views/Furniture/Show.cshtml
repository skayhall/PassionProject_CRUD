@model PPWebApp.Models.ViewModels.ShowFurniture

@{
    ViewBag.Title = "Show";
}

<h2>Show Furniture</h2>
<div class="navbar">
    <a class="navlink" href="/Furniture/List">Back to List</a>
    <a class="" href="/Furniture/Update/@Model.furniture.Id">Update</a>
    <a class="navlink" href="/Furniture/DeleteConfirm/@Model.furniture.Id">Delete</a>
</div>
<div>

    <div class="col2">
        <div>Name : @Model.furniture.Name</div>
        <div>Category: @Model.furniture.Category</div>
        <div>Price: @Model.furniture.Price</div>
        <div>Color: @Model.furniture.Color</div>
        <div>Weight: @Model.furniture.Weight</div>
        <div>Height: @Model.furniture.Height</div>
        <div>Depth: @Model.furniture.Depth</div>
        <div>Width: @Model.furniture.Width</div>
        <div>Description: @Model.furniture.Description</div>
        <div>
            Notes :
            <div class="">
                @Model.furniture.Description
            </div>
        </div>

    </div>
    
</div>