@model PPWebApp.Models.Category
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete the @Model.Name from the category list?</h2>
<div class="">
    <a href="/Category/Show/@Model.Id">Cancel</a>
</div>
<form method="POST" action="/Category/Delete/@Model.Id">
    <div class=""><input type="submit" value="Confirm" /></div>
</form>
